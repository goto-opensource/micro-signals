{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "target": "es5",
        "lib": ["es5", "es2015.collection", "es2015.promise"],
        "outDir": "lib",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
