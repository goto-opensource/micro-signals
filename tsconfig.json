{
    "compilerOptions": {
        "module": "esnext",
        "declaration": true,
        "target": "esnext",
        "lib": ["esnext"],
        "outDir": "lib",
        "moduleResolution": "node",
        "sourceMap": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "strict": true,
        "skipLibCheck": true,
        "incremental": true,
        "composite": true,
        "noFallthroughCasesInSwitch": true,
        "disableSourceOfProjectReferenceRedirect": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src",
        "test"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
