{
  "name": "@goto/micro-signals",
  "version": "2.4.0",
  "description": "A tiny typed messaging system inspired by js-signals that uses ES2015 sets",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@types/rimraf": "0.0.28",
    "@types/tape": "^4.2.30",
    "erasmus": "^0.1.0",
    "faucet": "0.0.1",
    "nyc": "^11.0.3",
    "rimraf": "^2.6.1",
    "tape": "^4.7.0",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typescript": "3.0.3"
  },
  "scripts": {
    "lint": "tslint --project ./tsconfig.json",
    "test": "yarn lint && nyc tape 'test/*.ts' | faucet && nyc report",
